@page
@model Jobs.WebClient.Pages.Views.CV.AddCVModel
@{
    <form method="post">
        <div>
            <label>Your name</label><br/>
            <input type="text" name="name"/>
        </div>
        <div>
            <label>Position</label><br/>
            <input type="text" name="position"/>
        </div>
        <div>
            <label>Your experience</label><br/>
            <input type="number" name="experience"/>
        </div>
        <div>
            <label>Your skills, please enter them separated by commas without spaces.</label><br/>
            <input type="text" name="skills"/>
        </div>
        <div>
            <label>Expected salary</label><br/>
            <input type="text" name="expectedSalary"/>
        </div>
        <div>
            <br/><input class="btn btn-dark" type="submit" asp-page-handler="AddCV" value="Add" />
        </div>
    </form>
}
