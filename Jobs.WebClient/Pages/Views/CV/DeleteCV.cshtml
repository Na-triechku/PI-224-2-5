@page "{handler?}"
@model Jobs.WebClient.Pages.Views.CV.DeleteCVModel
@{
    <table class="table">
        <tr>
            <td>CV Name</td>
            <td>CV Position</td>
            <td>CV Skills</td>
            <td>CV Experience</td>
            <td>CV Expected Salary</td>
            <td></td>
        </tr>
        @foreach (var cv in Model.CVs)
        {
            <tr>
                <td>@cv.Name</td>
                <td>@cv.Position</td>
                <td>@cv.Skills</td>
                <td>@cv.Experience</td>
                <td>@cv.ExpectedSalary</td>
                <td>
                    <form method="post">
                        <input class="btn btn-dark" type="submit" asp-route-id="@cv.Id" asp-page-handler="DeleteCV" value="Delete"/>
                    </form>
                </td>
            </tr>
        }
    </table>
}
